    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "allowJs": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": [
    "packages/**/*",
    "gulpfile.ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
