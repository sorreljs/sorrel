{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "types": ["reflect-metadata"]
  },
  "include": ["packages/**/*", "gulpfile.ts/**/*"],
  "exclude": ["node_modules"]
}
